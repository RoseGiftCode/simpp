{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Root of the project
    "paths": {
      "@chain": ["src/chain.ts"], 
      "@walletclient": ["src/walletclient.ts"] 
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/global.d.ts",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
