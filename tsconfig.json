{
  "compilerOptions": {
    "target": "esnext", 
    "lib": ["dom", "dom.iterable", "esnext"], 
    "allowJs": true, 
    "skipLibCheck": true, 
    "strict": true, 
    "forceConsistentCasingInFileNames": true, 
    "noEmit": true, 
    "esModuleInterop": true, 
    "module": "esnext", 
    "moduleResolution": "node", 
    "resolveJsonModule": true, 
    "isolatedModules": true, 
    "jsx": "preserve", 
    "incremental": true, 
    "baseUrl": ".", 
    "paths": {
      "@chain/*": ["src/chain/*"], 
      "@walletclient/*": ["src/walletclient/*"] 
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "next-env.d.ts", "global.d.ts" ], 
  "exclude": ["node_modules"] 
}
